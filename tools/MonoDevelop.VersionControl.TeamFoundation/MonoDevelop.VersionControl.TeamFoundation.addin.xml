<Addin id					 = "VersionControl"
			 namespace	 = "MonoDevelop"
			 name				 = "MonoDevelop Team Foundation Addin"
			 author			 = "Joel Reed"
			 copyright	 = "GPL"
			 url				 = "http://code.google.com/p/opentf"
			 description = "A MonoDevelop addin for using the Team Foundation version control system"
			 category		 = "IDE extensions"
			 version		 = "0.13.0">
	
	<Runtime>
		<Import assembly="MonoDevelop.VersionControl.TeamFoundation.dll"/>
	</Runtime>

	<Dependencies>
		<Addin id="Core" version="0.13.0"/>
		<Addin id="Core.Gui" version="0.13.0"/>
		<Addin id="Projects" version="0.13.0"/>
		<Addin id="Ide" version="0.13.0"/>
	</Dependencies>

	<Extension path = "/SharpDevelop/Workbench/Pads">
		<SolutionPad id = "TeamFoundationPad" class = "MonoDevelop.VersionControl.TeamFoundation.TeamFoundationPad" defaultPlacement = "Left" _label = "Team Foundation Browser">
		</SolutionPad>
	</Extension>

	<Extension path = "/SharpDevelop/Workbench/Contexts/Edit">
		<ContextPad id = "TeamFoundationPad"/>
	</Extension>

</Addin>
